<h1>Listing Course To Users</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_to_users.each do |course_to_user| %>
      <tr>
        <td><%= course_to_user.course %></td>
        <td><%= course_to_user.user %></td>
        <td><%= link_to 'Show', course_to_user %></td>
        <td><%= link_to 'Edit', edit_course_to_user_path(course_to_user) %></td>
        <td><%= link_to 'Destroy', course_to_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

