<div class="row">
  <noscript>
    <div class="alert alert-block col-md-12">
      <h4 class="alert-heading">Warning!</h4>
      <p>
        You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a>
        enabled to use this site.
      </p>
    </div>
  </noscript>
  <div id="content" class="col-lg-10 col-sm-10">
    <!-- content starts -->
    <div>
      <ul class="breadcrumb">
        <li>
          <i class="glyphicon glyphicon-home"></i>&nbsp<a href=show_instructor>Home</a>
        </li>
        <li>
          <span class="glyphicon glyphicon-edit"></span>&nbspEdit Homework
        </li>
      </ul>
    </div>

    <div class="row">
      <div class="box col-md-12">
        <div class="box-inner">
          <div class="box-header well" data-original-title="">
            <h2><i class="glyphicon glyphicon-user"></i> Homework Information</h2>
          </div>
          <div class="box-content">
            <div class="clearfix"></div><br>



            <% flash.each do |key, msg| %>
                <%= content_tag :div, msg, :class => [key, " message"], :id => "notice_#{key}" %>
            <% end %>
            <div class="row">
              <div class="col-md-6">



                <%= form_tag '/homeworks/create', { :multipart => true } do %>


                    <p>
                    <h3>Homework Name</h3>
                   <textbox name="contents" id="contents" disabled style="width: 50%;text-align:justify; padding: 2%; height: 10px; font:20px italic;  ">
<%=@homework.hw_name%>
                                  </textbox><br>
                    <h3>Homework Description</h3>
                    <%=text_area_tag 'hw_description', content =@homework.hw_description , rows: 8, cols: 120  %>
                    <div class="row">
                      <div class="col-md-6">
                        <h4> Test input </h4>
                        <%= file_field_tag 'testcase_input' %>
                      </div>
                      <div class="col-md-6">
                        <h4>Test output </h4>
                        <%= file_field_tag 'testcase_output' %>
                      </div>
                    </div>
                    <h4>Release date</h4>
                    <%= datetime_select(:time, 'release_time', :default => {:year => @release_date_times[0], :month => @release_date_times[1], :day => @release_date_times[2],:hour => @release_date_times[3], :minute => @release_date_times[4]}) %>
                    <h4>Due date   </h4>
                    <%= datetime_select(:time, 'due_time', :default => {:year => @due_date_times[0], :month => @due_date_times[1], :day => @due_date_times[2],:hour => @due_date_times[3], :minute => @due_date_times[4]}) %>
                    <input type="hidden" id="course_id" name="course_id" value="<%= @course.id %>">
                    <input type="hidden" id="homework_id" name="homework_id" value="<%= @homework.id %>">
                    <input type="hidden" id="edit_homework_flag" name="edit_homework_flag" value="<%= @edit_homework_flag=1 %>">
                    <input type="hidden" id="homework_release_time" name="homework_release_time" value="<%= @homework.hw_release_time %>">
                    <input type="hidden" id="homework_due_time" name="homework_due_time" value="<%= @homework.hw_due_time %>">

                    <br/>
                    <br/>
                    <div class="row">
                      <div  class="col-md-3">
                        <%= submit_tag "Submit", class: "btn btn-primary"%>
                      </div>

                    </div>

                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


